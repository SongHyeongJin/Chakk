<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/topMenu"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border"
        app:layout_constraintHeight_percent="0.138">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="66.667dp"
            android:src="@drawable/imagesample"
            android:layout_gravity="center"
            android:layout_marginLeft="27dp"
            android:id="@+id/profileimage"/>

        <LinearLayout
            android:layout_width="66.667dp"
            android:layout_height="35.667dp"
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="27.333dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/profileName"
                android:layout_width="70dp"
                android:layout_height="18dp"
                android:text="프로필이름"
                />
            <TextView
                android:id="@+id/profileId"
                android:layout_width="70dp"
                android:layout_height="18dp"
                android:text="ID"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topMenu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border"
        app:layout_constraintHeight_percent="0.4"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_margin="12dp"
            android:text="계정 설정">
        </TextView>
        <TextView
            android:id="@+id/logOut"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_marginLeft="27.333dp"
            android:text="로그 아웃">
        </TextView>
        <TextView
            android:id="@+id/accountRemove"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_marginLeft="27.333dp"
            android:text="계정 탈퇴">
        </TextView>

        <TextView
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_margin="12dp"
            android:text="앱 설정">
        </TextView>
        <TextView
            android:id="@+id/alarmSetting"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_marginLeft="27.333dp"
            android:text="알림 설정">
        </TextView>
        <TextView
            android:id="@+id/announcement"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_marginLeft="27.333dp"
            android:text="공지 사항">
        </TextView>
        <TextView
            android:id="@+id/appInfo"
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_marginLeft="27.333dp"
            android:text="앱 정보">
        </TextView>

        <TextView
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_margin="12dp"
            android:text="앱 설정">
        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>