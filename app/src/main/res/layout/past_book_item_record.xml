<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/book_item_background_layout"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/img_2"
            android:id="@+id/BookImgView"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="세이노의 가르침침세이노의 가르침세이노의"
                android:textSize="20dp"
                android:fontFamily="@font/calibrib"
                android:textColor="@color/book_name_color"
                android:id="@+id/bookName"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="세이노세이노세이노노세이이세이노세이노세이노세이노세이노"
                android:textSize="15dp"
                android:fontFamily="@font/calibrib"
                android:textColor="@color/book_data_color"
                android:id="@+id/bookWriter"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="한빛출판사"
                android:textSize="15dp"
                android:fontFamily="@font/calibrib"
                android:textColor="@color/book_data_color"
                android:id="@+id/bookPub"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:text="읽은 날짜"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibrib"
                    android:textColor="@color/book_info_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="2022.04.07 ~ 2022.04.15"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibrib"
                    android:textColor="@color/book_data_color"
                    android:id="@+id/readDate"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginRight="10dp"
                    android:text="내 평점"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibrib"
                    android:textColor="@color/book_info_color" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="1dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:progressTint="@color/book_rating_color"
                    android:rating="5"
                    android:id="@+id/rating" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>