<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.chack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item> <!--배경색-->
        <item name="colorPrimaryVariant">@color/main_color</item> <!--시계 나오는 부분 색상-->
        <item name="colorOnPrimary">@color/white</item><!--버튼속 글자 색-->
        <item name="toolbarStyle">@style/CustomToolBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub_color</item>
        <item name="colorSecondaryVariant">@color/sub_color</item>
        <item name="colorOnSecondary">@color/sub_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 해당 스타일에 원하는 변경 사항을 추가하거나 수정합니다. -->
        <item name="android:windowBackground">@color/white</item>
        <item name ="colorOnPrimary">@color/black</item>
        <!-- 기타 필요한 스타일 속성들을 추가하거나 수정합니다. -->
    </style>
</resources>